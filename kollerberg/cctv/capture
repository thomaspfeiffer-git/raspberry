#!/bin/bash
#############################################################################
# capture                                                                   #
# (c) https://github.com/thomaspfeiffer-git 2020                            #
#############################################################################

# for a better timing this url could be used
# https://api.sunrise-sunset.org/json?lat=48.2&lng=15.63333&formatted=0


TIMEOUT=120
BANDWITH=512

STOPFILE="./stopfile"
rm -f $STOPFILE

if [ "$1" == "stop" ] ; then
    touch $STOPFILE
    exit
fi

TEMPDIR="/ramdisk/"

DESTHOST="seti-05"
DESTDIR="/ramdisk/"


function Log {
   echo "`date "+%Y%m%d-%H%M%S"`: ${1}"
 }


last_state=0
while [ 1 ] ; do
    ./scheduler.py
    if [ "$?" -eq 1 ] ; then
        if [ "$last_state" -eq 0 ] ; then
            last_state=1
            i=0
        fi

        FILENAME="${TEMPDIR}pic_`date "+%Y%m%d-%H%M%S"`_$i.jpg"
        raspistill -ae 64,0xff,0x808000 -a 4 -a "Kollerberg %Y-%m-%d %X - $i" -o $FILENAME
        Log "$FILENAME captured"

        ts1=`date "+%s"`
        FILESIZE=$[$(stat --printf="%s" $FILENAME)/1024]
        timeout -k 10 -v $TIMEOUT scp -l $BANDWITH -q $FILENAME ${DESTHOST}:${DESTDIR}
        if [ "$?" -eq 0 ] ; then
            ts2=`date "+%s"`
            Log "$FILENAME moved ($FILESIZE kB in $[$ts2-$ts1] seconds; $[$FILESIZE/$[$ts2-$ts1]] kB/s)."
        fi

        rm $FILENAME

        if [ -e $STOPFILE ] ; then
            rm $STOPFILE
            Log "stopped by stopfile"
            exit
        fi

        i=$[$i+1]
    else
        if [ "$last_state" -eq 1 ] ; then
            last_state=0
            ssh $DESTHOST "touch ${DESTDIR}/done"
            Log "done for today"
        fi

        sleep 60
    fi
done

# eof #

